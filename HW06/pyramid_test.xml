<?xml version="1.0"?>
<test-suite>
    <test-case>
        <name>pyramid(1)</name>
        <has-max-executions>1</has-max-executions>
        <max-executions>1000000</max-executions>
        <randomize>1</randomize>
        <input>
            <test-value><address>LEVELS</address><value>1</value></test-value>
        </input>
        <output>
            <test-stdout condition="equals" points = "5"><value>*\n</value></test-stdout>
        </output>
    </test-case>
